{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "stationId": {
      "type": "string"
    },
    "onConnect": {
      "type": "boolean",
      "default": false
    },
    "onClose": {
      "type": "boolean",
      "default": false
    },
    "onMessage": {
      "type": "boolean",
      "default": false
    },
    "sentMessage": {
      "type": "boolean",
      "default": false
    },
    "messageRegexFilter": {
      "type": "string",
      "nullable": true
    },
    "url": {
      "type": "string"
    }
  },
  "required": ["stationId", "url"],
  "additionalProperties": false
}
